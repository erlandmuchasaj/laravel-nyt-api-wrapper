{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/nyc-api",
    "type": "project",
    "description": "NYT Best Sellers List & Filter",
    "keywords": ["laravel", "framework", "api", "magazines", "best selelrs"],
    "license": "MIT",
    "version": "1.0.0",
    "homepage": "https://erlandmuchasaj.tech",
    "readme": "README.md",
    "time": "2025-03-20T20:00:00+00:00",
    "authors": [
        {
            "name": "Erland Muchasaj",
            "email": "erland.muchasaj@gmail.com",
            "homepage": "https://erlandmuchasaj.tech",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "erlandmuchasaj/laravel-gzip": "^1.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.1",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "laravel/telescope": "^5.5",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
        ],
        "analyze": [
            "./vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "format": [
            "./vendor/bin/pint"
        ],
        "test": [
            "./vendor/bin/pest",
        ]
    },
    "scripts-descriptions": {
        "analyze": "Run PHPStan static analysis against your application.",
        "format": "Run Laravel pint to do Code style and minimalistic fixes for laravel.",
        "test": "Run Laravel tests, to test NYT endpoints."
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "barryvdh/laravel-debugbar",
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
